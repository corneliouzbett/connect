<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lavacreators.corneliouzbett.ufarm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".auth.LoginActivity"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RequestActivity" />
        <activity android:name=".auth.ResetPasswordActivity" />
        <activity
            android:name=".auth.SignUpActivity"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".activities.HistoryActivity" />
        <activity android:name=".activities.RegistrationActivity" />
        <activity android:name=".activities.FarmerRegistrationActivity" />
        <activity android:name=".activities.SpecialistRegistrationActivity"></activity>
    </application>

</manifest>