<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FarmerRegistrationActivity">
        <ViewFlipper
            android:id="@+id/farmer_viewflipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="458dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Welcome Dear Farmer, we would like to know you more. please
provide with your the personal info"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="@dimen/fab_margin"
                        android:background="@android:color/black" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/firstname_edt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:hint="First Name"
                            android:inputType="textPersonName" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/lastname_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Last Name"
                            android:inputType="textPersonName"
                            android:padding="10dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/phone_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Phone Number"
                            android:inputType="phone"
                            android:padding="10dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/loaction_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter your location"
                            android:inputType="text"
                            android:padding="10dp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:layout_below="@+id/layout" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/next_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/view_line"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:elevation="@dimen/fab_margin"
                    android:padding="16dp"
                    android:src="@drawable/ic_arrow_forward" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/lower_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/secondtitle_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="About your Farm (Agriculture)"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/black" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/typeoffarming_edt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:hint="Type of Farming"
                            android:inputType="textPersonName" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/desc_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Description your Farming ?"
                            android:inputType="textPersonName"
                            android:lines="4"
                            android:padding="10dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/town_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Your nearest Town"
                            android:inputType="text"
                            android:padding="10dp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <View
                    android:id="@+id/llo"
                    android:layout_below="@+id/lower_ll"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"/>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/done_fab"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="32dp"
                    android:padding="8dp"
                    android:layout_below="@+id/llo"
                    android:src="@drawable/ic_done_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/back_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="48dp"
                    android:layout_marginStart="32dp"
                    android:padding="8dp"
                    android:layout_below="@+id/llo"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_marginLeft="32dp"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>
        </ViewFlipper>

</ScrollView>